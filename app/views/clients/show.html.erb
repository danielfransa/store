<h1>Client Details</h1>

<table class="table table-bordered w-auto">
  <tr>
    <th>Name</th>
    <td><%= @client.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @client.email %></td>
  </tr>
  <tr>
    <th>Phone</th>
    <td><%= @client.phone %></td>
  </tr>
  <tr>
    <th>Document</th>
    <td><%= @client.document%></td>
  </tr>
</table>

<div class="mt-4">
  <%= link_to "Edit", edit_client_path(@client), class: "btn btn-warning" %>
  <%= link_to "Back", clients_path, class: "btn btn-secondary ms-2" %>
</div>
