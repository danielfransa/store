<h1>Clients</h1>

<p>
  <%= link_to "New Client", new_client_path, class: "btn btn-primary" %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>

        <td><%= link_to "Show", client_path(client), class: "btn btn-sm btn-info" %></td>
        <td><%= link_to "Edit", edit_client_path(client), class: "btn btn-sm btn-warning" %></td>
        <td>
          <%= link_to "Delete", client_path(client),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
