<%= form_with(model: @sale_item) do |form| %>
  <div>
    <%= form.label :sale_id %>
    <%= form.collection_select :sale_id, @sales, :id, :id, prompt: "Select Sale" %>
  </div>

  <div>
    <%= form.label :inventory_id %>
    <%= form.collection_select :inventory_id, @inventories, :id, :name, prompt: "Select Inventory" %>
  </div>

  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price, step: 0.01 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
